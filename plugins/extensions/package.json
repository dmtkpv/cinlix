{
	"type": "module",
	"name": "@this/extensions",
	"version": "1.0.0",
	"scripts": {
		"build": "directus-extension build",
		"watch": "directus-extension build -w --no-minify"
	},
	"directus:extension": {
		"type": "bundle",
		"host": "^10.10.0",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "hook",
				"name": "hook-slugify",
				"source": "hooks/slugify.js"
			}
		]
	},
	"devDependencies": {
		"@directus/extensions-sdk": "16.0.1"
	},
	"dependencies": {
		"slugify": "1.6.6"
	}
}
