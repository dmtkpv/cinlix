{
  "type": "module",
  "name": "@this/directus",
  "version": "0.0.1",
  "scripts": {
    "bootstrap": "directus bootstrap",
    "serve": "directus start",
    "build": "directus-extension build",
    "watch": "directus-extension build -w --no-minify"
  },
  "dependencies": {
    "@this/website": "workspace:*",
    "directus": "11.11.0",
    "lodash-es": "4.17.21",
    "slugify": "1.6.6"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "16.0.1"
  },
  "directus:extension": {
    "type": "bundle",
    "host": "^10.10.0",
    "path": {
      "app": "extensions/bundle/dist/app.js",
      "api": "extensions/bundle/dist/api.js"
    },
    "entries": [
      {
        "type": "hook",
        "name": "hook-slugify",
        "source": "hooks/slugify.js"
      },
      {
        "type": "hook",
        "name": "hook-build",
        "source": "hooks/build.js"
      }
    ]
  },
  "imports": {
    "#root/*": "./*"
  }
}