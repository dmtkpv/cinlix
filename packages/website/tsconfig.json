{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "~/*": ["./src/*"],
      "~db/*": ["./db/*"]
    }
  },
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}