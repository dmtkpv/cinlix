:80 {

    root * /www
    encode gzip

    @staticFiles {
        path *.css *.js
    }
    header @staticFiles Cache-Control "public, max-age=31536000, immutable"

    file_server

    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        rewrite @404 /404/index.html
        file_server
    }

}