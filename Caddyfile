admin.cinlix.com {
    reverse_proxy prod:${BACKEND_PORT}
}

cinlix.com, www.cinlix.com {

    root * /www/public
    encode gzip

    @static {
        file
        path *.css *.js *.woff2
    }
    header @static Cache-Control max-age=5184000

    file_server

    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        handle @404 {
            rewrite * /404/index.html
            file_server
        }
    }

}