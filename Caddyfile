:80 {

    root * /www
    encode gzip

    @static {
        file
        path *.css *.js
    }
    header @static Cache-Control max-age=5184000

    file_server

    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        handle @404 {
            rewrite * /404/index.html
            file_server
        }
    }

}